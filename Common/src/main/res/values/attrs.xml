<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TitleBar">
        <attr name="titleBarTitle" format="string" />
        <attr name="titleBarTitleColor" format="color" />
        <attr name="titleBarRightText" format="string" />
        <attr name="titleBarLeftImage" format="reference" />
        <attr name="titleBarRightImage" format="reference" />
        <attr name="titleBarRightTwoImage" format="reference" />
        <attr name="titleBarBackground" format="reference|color" />
        <attr name="titleBarRightType" format="enum">
            <enum name="text" value="0" />
            <enum name="image" value="1" />
        </attr>
        <attr name="isCompatStatusBar" format="boolean" />
    </declare-styleable>


    <declare-styleable name="MultiStateView">
        <attr name="msv_loadingView" format="reference" />
        <attr name="msv_emptyView" format="reference" />
        <attr name="msv_errorView" format="reference" />
        <attr name="msv_viewState" format="enum">
            <enum name="content" value="0" />
            <enum name="error" value="1" />
            <enum name="empty" value="2" />
            <enum name="loading" value="3" />
        </attr>
        <attr name="msv_animateViewChanges" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RoundLayout">
        <!--全部圆角-->
        <attr name="rl_radius" format="dimension" />

        <!--控制四个角-->
        <attr name="rl_radius_left_top" format="dimension" />
        <attr name="rl_radius_right_top" format="dimension" />
        <attr name="rl_radius_right_bottom" format="dimension" />
        <attr name="rl_radius_left_bottom" format="dimension" />

        <!--渐变背景色-->
        <attr name="rl_startColor" format="color" />
        <attr name="rl_endColor" format="color" />
        <attr name="rl_centerColor" format="color" />


        <!--设置线性渐变的方向。对应gradient标签android:angle-->
        <attr name="rl_gradient_orientation" format="enum">
            <!--从顶部到底部绘制渐变-->
            <enum name="top_bottom" value="0"/>
            <!--绘制从右上角到左下角的渐变-->
            <enum name="tr_bl" value="1"/>
            <!--从右到左绘制渐变-->
            <enum name="right_left" value="2"/>
            <!--从右下角到左上角绘制渐变-->
            <enum name="br_tl" value="3"/>
            <!--从底部到顶部绘制渐变-->
            <enum name="bottom_top" value="4"/>
            <!--从左下角到右上角绘制渐变-->
            <enum name="bl_tr" value="5"/>
            <!--从左到右绘制渐变-->
            <enum name="left_right" value="6"/>
            <!--绘制从左上角到右下角的渐变-->
            <enum name="tl_br" value="7"/>
        </attr>

        <!--gradient标签android:type属性-->
        <attr name="rl_gradient_type" format="enum">
            <!--线性渐变-->
            <enum name="linear" value="0"/>
            <!--放射性渐变-->
            <enum name="radial" value="1"/>
            <!--扫描式渐变-->
            <enum name="sweep" value="2"/>
        </attr>

        <!--普通背景色背景色-->
        <attr name="rl_backgroundColor" format="color" />

        <!--边框大小-->
        <attr name="rl_stroke_width" format="dimension" />
        <attr name="rl_stroke_color" format="color" />

    </declare-styleable>

</resources>